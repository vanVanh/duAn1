<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateAddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/updateAddress_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E7B2D"
        app:title=" Địa chỉ"/>

    <EditText
        android:id="@+id/ed_updateAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="địa chỉ ..."
        android:inputType="text"
        android:background="@drawable/customize_boder_edittext"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv_error_updateAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lỗi"
        android:textColor="#FFF00000"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"/>

    <Button
        android:id="@+id/btn_updateAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/customize_button_logout"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="15dp"
        />

</LinearLayout>