<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DoiMatKhauActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E7B2D"
        app:title=" Đổi mật khẩu"
        app:titleTextColor="@color/white"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:hintEnabled="false">
        <EditText
            android:id="@+id/ed_changePassword_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:background="@drawable/customize_boder_edittext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_changePassword_error_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lỗi"
        android:textColor="#FFF00000"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:hintEnabled="false">
        <EditText
            android:id="@+id/ed_changePassword_newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:background="@drawable/customize_boder_edittext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_changePassword_error_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lỗi"
        android:textColor="#FFF00000"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:hintEnabled="false">
        <EditText
            android:id="@+id/ed_changePassword_renewpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:background="@drawable/customize_boder_edittext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_changePassword_error_renewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lỗi"
        android:textColor="#FFF00000"
        android:textSize="19sp"
        android:layout_marginLeft="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_changePassword_huy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:background="@drawable/customize_button_logout"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_changePassword_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="đổi mật khẩu"
            android:background="@drawable/customize_button_logout"
            android:layout_margin="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>